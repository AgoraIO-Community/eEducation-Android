<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".classroom.SmallClassActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <io.agora.education.classroom.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/gray_F5F7F8"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_videos"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_view" />

        <FrameLayout
            android:id="@+id/layout_whiteboard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_videos" />

        <FrameLayout
            android:id="@+id/layout_share_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_videos" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_im"
            android:layout_width="@dimen/dp_222"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_videos">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/layout_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/blue_44A2FC"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/blue_44A2FC"
                app:tabTextColor="@color/gray_333333">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_chat_room" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_student_list" />

            </com.google.android.material.tabs.TabLayout>

            <View
                android:id="@+id/line_vertical"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/gray_DBE2E5"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/line_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_DBE2E5"
                app:layout_constraintBottom_toBottomOf="@id/layout_tab" />

            <FrameLayout
                android:id="@+id/layout_chat_room"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/line_vertical"
                app:layout_constraintTop_toBottomOf="@id/line_horizontal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_float"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ic_float"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_videos" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_view" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send2"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send3"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send4"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/roomState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课堂状态"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/allMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全体禁言"
            app:layout_constraintStart_toEndOf="@id/roomState"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/userUuid0"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/allMute"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singleMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单个禁言"
            app:layout_constraintStart_toEndOf="@id/userUuid0"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singleUnMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭单个禁言"
            app:layout_constraintStart_toEndOf="@id/singleMute"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/userUuid1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomState" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/openAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量开音频"
            app:layout_constraintStart_toEndOf="@id/userUuid1"
            app:layout_constraintTop_toTopOf="@id/userUuid1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/closeAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量关音频"
            app:layout_constraintStart_toEndOf="@id/openAudio"
            app:layout_constraintTop_toTopOf="@id/openAudio" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/openVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量开视频"
            app:layout_constraintStart_toEndOf="@id/closeAudio"
            app:layout_constraintTop_toTopOf="@id/closeAudio" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/closeVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量关视频"
            app:layout_constraintStart_toEndOf="@id/openVideo"
            app:layout_constraintTop_toTopOf="@id/openVideo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量删流"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userUuid1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
